{{!< layout}} 

<h3>Upload</h3>
<hr/>

{{#if message}}
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true" style="position: absolute; top: 10; right: 0;" data-autohide="false">
  <div class="toast-header">
    
    <strong class="mr-auto">Thank you</strong>
    <small>11 mins ago</small>
    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="toast-body">
    Thanks for uploading your Data file.
  </div>
</div>
{{/if}}

<form method="POST" action="/admin/upload/orders">
  <input type="file"/>
  <input type="submit"/>
</form>

